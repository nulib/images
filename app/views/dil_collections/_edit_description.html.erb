<form id="document_metadata" action="<%= url_for(:action=>"update", :controller=>"assets", :content_type=>"hydrangea_collection")%>" method="post" data-resourceType="hydrangea_collection" accept-charset="utf-8">
  <fieldset id="title_fields">
    <legend>Title</legend>
    <input id="content_type" type="hidden" name="content_type" value="hydrangea_collection" />
    <dl>
      <dt>
        <%= fedora_field_label("descMetadata", [:title_info, :main_title], "Title:") %>
      </dt>
      <dd class="title">
        <%= fedora_text_field(@document_fedora,"descMetadata", [:title_info, :main_title], :multiple=>false) %>
      </dd>
    </dl>
  </fieldset>
  <fieldset id="abstract_fields">
    <legend>Note</legend>
    <dl>
      <dt>
        <%= fedora_field_label("descMetadata", [:abstract], "Note:") %>
      </dt>
      <dd id="abstract">
        <%= fedora_text_area(@document_fedora,"descMetadata", [:abstract], :multiple=>false) %>
      </dd>
    </dl>
  </fieldset>
</form>

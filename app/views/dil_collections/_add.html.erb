<% if current_user %>

  <div>
    <hr/>
    <h3>Collections</h3>
    <%= form_for DILCollection.new do |f| %>
      <%= f.label "Create new collection:"%>
      <%= f.text_field :title %>
    <% end %>
    <br/>
    <!-- Each collection row is a JQuery UI droppable -->
    </div>
    <div id="imageCollection">
      <% current_user.top_level_collections.each do |collection| %>
		<div class="ui-widget-content">
          <ul> 
            <li id="<%=collection['id']%>" pid="<%=collection['id']%>" title="<%=collection['title_t'].first%>" class="collection"><a href="/dil_collections/<%=collection['id']%>"><%=collection['title_t'].first%></a></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
    <h2 class="section-title">Description</h2>
    <%= form_for @multiresimage, :html=>{:class=>'form-horizontal'} do |f|%>
      <div>
        PID: <%= @multiresimage.id %>
      </div>
      <br/>
      <div class="control-group">
        <%= f.label 'Agent', :class=>"control-label" %>
        <div class="controls">
          <%= f.text_field :agentSet_display, :class=>'span6' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label 'Date', :class=>"control-label" %>
        <div class="controls">
        <%= f.text_field :dateSet_display, :class=>'span6' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label 'Description', :class=>"control-label" %>
        <div class="controls">
          <%= f.text_field :descriptionSet_display, :class=>'span6' %>
        </div>
      </div>
       <div class="control-group">
        <%= f.label 'Subject', :class=>"control-label" %>
        <div class="controls">
          <%= f.text_field :subjectSet_display, :class=>'span6' %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label 'Title', :class=>"control-label" %>
        <div class="controls">
          <%= f.text_field :titleSet_display, :class=>'span6' %>
        </div>
      </div>
      
      <fieldset class="permissions">
        <legend>Permissions</legend>
        <div class="control-group">
          <%= f.label :admin_policy_id, "Policy", :class=>"control-label" %>
          <div class="controls">
            <%= f.collection_select :admin_policy_id, @policies, :pid, :title, {:include_blank => 'Default Policy &mdash; Private to Owner'.html_safe}, :class=>'span5' %>
          </div>
          <%= link_to "manage policies", policies_path %>
        </div>        
        <span id="object-permissions-heading">Also grant access to</span>
        <%= render :partial=>'shared/edit_groups_and_users', :locals=>{:fedora_object=>@multiresimage, :field=>:permissions} %>
      </fieldset>
      
      <div class="form-actions">
        <%= f.submit "Save changes", :class=>'btn btn-primary'%>
      </div>
    <%end%>


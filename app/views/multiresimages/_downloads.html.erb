<% if can?(:read, @multiresimage) %>
              <% unless @multiresimage.datastreams["DELIV-OPS"].find_by_terms(:svg_image).empty? %>
<nav id="downloads" style="padding-bottom: 1em">

                    <ul>
                            <% image_max = @multiresimage.longside_max %>
                            <a target="_blank" class="btn" href="<%=DIL_CONFIG['dil_app_url']%>multiresimages/get_image/<%= @multiresimage.pid%>/<%= 1600 < image_max ? 1600 : image_max %>">Download</a></li>
                    </ul>

                    <input class="submit btn" id="addToCollectionButton" value="Add to Collection" style="margin-right: 1em" >
</nav>
                    
              <% end %>
<% end %>

  <script>
   $( "#addToCollectionButton" ).click(function(e){
     $.getJSON("/dil_collections/get_collections")
   e.preventDefault();
   });

   

  </script>
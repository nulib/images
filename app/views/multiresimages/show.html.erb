<% sidebar_items << capture do %>
  <%= render :partial=>'shared/menu' %>
<% end %>

<% if can?(:read, @multiresimage) %>
  <script type="text/javascript">
    $(document).ready(function()
    {
      CropTool.initialize("<%= params[:id] %>", true, $("#crop-tool"));
    });
  </script>

<!-- crop tool above -->
	<div id="crop-tool" style="background-color:#000000; width:100%; height: 500px; border: thin solid blue;">
<% else %>
  <div>
    <p>You do not have permission to view the content of this image.  To request permission, contact the image's owners.</p>
    <span id="current_owners">The current owner(s) of this image:
      <ul>
      <% editors(@multiresimage).each do |person| %>
         <li class="current_owner"><%= person[:name] %></li>
      <% end %>
      </ul>
    </span>
  </div>
<% end %>
    <div id="metadata" style="display:none">
      <div id="crop-details"></div>
    </div>
    <div id="collection"  style="display:none">
      <div id="crop-list">
        <ul id="sortable">

        </ul>
      </div>
    </div>
	</div>      

     
    <h2 class="section-title"><a href="#">Description</a></h2>
    <%= render :partial => 'multiresimages/show_description' %>

    <% if can?(:edit, @multiresimage) %>
      <%= link_to "Edit", edit_multiresimage_path(@multiresimage) %>
    <% end %>

